resource "aws_iam_role" "pg_role" {
    name = "playground_iam_role"

  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "sts:AssumeRole",
      "Principal": {
        "Service": "ec2.amazonaws.com"
      },
      "Effect": "Allow",
      "Sid": ""
    }
  ]
}    
EOF
}

resource "aws_iam_role_policy" "pg_role_policy" {
    name = "playground_iam_role_pollicy"
    role = "${aws_iam_role.pg_role.id}"
    policy = <<EOF
